page {
    background: #f9f9f9;
    height: 90%;
    width: 100%;
}

.topLine {
    background: rgba(0,0,0,.1);
    height: 2rpx;
}

.content,.topLine {
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
}

.content {
    background: #fff;
    height: 500rpx;
}

.inputBlock {
    float: left;
    width: 100%;
}

.input {
    color: #333;
    height: 30%;
    width: 80%;
}

@media screen and (max-width:375px) {
    .imgBlock {
        float: right;
        height: 30rpx;
        margin-right: 30rpx;
        position: fixed;
        right: 0;
        top: 80rpx;
        width: 30rpx;
        z-index: 9999;
    }
}

@media screen and (min-width:375px) {
    .imgBlock {
        float: right;
        height: 30rpx;
        margin-right: 30rpx;
        position: fixed;
        right: 0;
        top: 85rpx;
        width: 30rpx;
        z-index: 9999;
    }
}

.clearImgShow {
    height: 35rpx;
    vertical-align: center;
    width: 35rpx;
}

.clearImgHide {
    display: none;
}

.btn {
    height: 80rpx;
    left: 0;
    margin-top: 30%;
    position: absolute;
    text-align: center;
    width: 100%;
}

.searchHeader {
    align-items: center;
    background: #f2f2f2;
    border-radius: 12rpx 12rpx 12rpx 12rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    height: 90rpx;
    margin: 58rpx auto 0;
    padding: 0 10rpx 0 20rpx;
    width: 95%;
}

.remainText {
    text-align: center;
    width: 100%;
}