.commodity_screen {
    background: #000;
    color: #fff;
    height: 100%;
    opacity: .2;
    top: 0;
    z-index: 1000;
}

.commodity_attr_box,.commodity_screen {
    left: 0;
    overflow: hidden;
    position: fixed;
    width: 100%;
}

.commodity_attr_box {
    background: #fff;
    border-radius: 20px 20px 0 0;
    bottom: 0;
    height: 500rpx;
    padding-top: 20rpx;
    z-index: 2000;
}

.van_action_left_title {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
    letter-spacing: 2rpx;
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
}

.van_action_close {
    float: right;
    height: 40rpx;
    margin-right: 32rpx;
    margin-top: -35rpx;
    width: 40rpx;
}

.close {
    background: url("data:image/svg+xml;base64,");
    background-size: 40rpx 40rpx;
    height: 40rpx;
    width: 40rpx;
}

.van_action_left_block {
    height: auto;
    text-align: center;
    width: 150rpx;
}

.btnTabBlock {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 80rpx;
    justify-content: center;
    margin: 44rpx auto 0;
    top: 110rpx;
    width: 90%;
}

.NoBtnTab {
    background: #f9f9f9;
    color: #666;
    opacity: 1;
}

.btnTab,.NoBtnTab {
    float: left;
    font-size: 28rpx;
    font-weight: 400;
    height: 100%;
    line-height: 80rpx;
    margin-left: 2%;
    text-align: center;
    width: 152rpx;
}

.btnTab {
    background: #f5a200;
    color: #f5f5f5;
}

.inputBlock {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 20%;
    justify-content: center;
    margin: 16rpx auto 0;
    right: 52rpx;
    top: 202rpx;
    width: 90%;
}

.van_action_left_text1 {
    color: #838b99;
    display: flex;
    font-size: 28rpx;
    font-weight: 500;
    width: 150rpx;
}

.btnTabInputBlock {
    background: #f9f9f9;
    height: 80rpx;
    margin-left: 13rpx;
    position: relative;
    width: 75%;
}

.btnTabInput {
    color: #333;
    font-size: 28rpx;
    font-weight: 400;
    height: 80rpx;
    padding-right: 20rpx;
    padding-top: 0rpx;
    text-align: right;
    width: 96%;
}

.doubleBtn {
    bottom: 70rpx;
    position: absolute;
    width: 100%;
}

.leftBtn {
    float: left;
    margin-left: 40rpx;
}

.leftBtn,.rightBtn {
    height: 40%;
    width: 40%;
}

.rightBtn {
    float: right;
    margin-right: 40rpx;
}

button::after {
    border: none;
}

.bottomBtnCancel {
    border: 1px solid #6e7480;
    border-radius: 20px 20px 20px 20px;
    color: #666;
}

.bottomBtnCancel,.bottomBtnConfirm {
    font-size: 30rpx;
    font-weight: 500;
    width: 100%;
}

.bottomBtnConfirm {
    background: #f5a200;
    border: #f5a200;
    border-radius: 20px 20px 20px 20px;
    color: #fff;
    padding: 3rpx 0rpx;
}

.placeholderClass {
    right: 20rpx;
}