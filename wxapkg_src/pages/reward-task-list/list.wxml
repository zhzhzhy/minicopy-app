<view>
    <view class="topLine"></view>
    <view class="topBlock">
        <view class="myCoin">我的金币</view>
        <view class="detailedBlock">
            <view bindtap="details" class="detailed">
                <text>明细</text>
            </view>
            <view class="rightArrowBlock">
                <icon class="rightArrow"></icon>
            </view>
        </view>
        <view class="coinNumberBlock">
            <view class="coinBlock">
                <icon class="coin"></icon>
            </view>
            <view class="numberBlock">
                <text>100</text>
            </view>
        </view>
    </view>
    <view class="content">
        <view class="secondBlock">
            <view class="picView"></view>
            <view class="imgBlock">
                <icon class="viewImg"></icon>
            </view>
            <view class="name">
                <text>观看广告（{{view}}/1）</text>
            </view>
            <view class="code">
                <text>送10金币</text>
            </view>
            <view class="btn" wx:if="{{viewShow}}">
                <van-button bindtap="showDailog" customStyle="width:68px;height:26px;background:#ffffff;border-radius:20px 20px 20px 20px;border: 1px solid #F5A200;color:#f5a200;" size="small" type="info">去完成</van-button>
            </view>
            <view class="btns" wx:else>
                <view style="float:left;margin-right:10rpx;">
                    <icon class="success"></icon>
                </view>
                <view style="float:left;font-size:24rpx;font-weight:400;margin-top:3rpx;">
                    <text>完成</text>
                </view>
            </view>
        </view>
        <view class="secondBlock">
            <view class="picView"></view>
            <view class="imgBlock">
                <icon class="adviceImg"></icon>
            </view>
            <view class="name">
                <text>提出建议（{{advice}}/1）</text>
            </view>
            <view class="code">
                <text>通过审核后送20金币</text>
            </view>
            <view class="btn" wx:if="{{opinionShow}}">
                <van-button bindtap="showDailog" customStyle="width:68px;height:26px;background:#ffffff;border-radius:20px 20px 20px 20px;border: 1px solid #F5A200;color:#f5a200;" size="small" type="info">去完成</van-button>
            </view>
            <view class="btns" wx:else>
                <view style="float:left;margin-right:10rpx;">
                    <icon class="success"></icon>
                </view>
                <view style="float:left;font-size:24rpx;font-weight:400;margin-top:3rpx;">
                    <text>完成</text>
                </view>
            </view>
        </view>
        <view class="secondBlock">
            <view class="picView"></view>
            <view class="imgBlock">
                <icon class="tikTokImg"></icon>
            </view>
            <view class="name">
                <text>发布抖音（{{tikTok}}/1）</text>
            </view>
            <view class="code">
                <text>通过审核后送20金币</text>
            </view>
            <view class="btn" wx:if="{{tikTokShow}}">
                <van-button bindtap="Tiktok" customStyle="width:68px;height:26px;background:#ffffff;border-radius:20px 20px 20px 20px;border: 1px solid #F5A200;color:#f5a200;" size="small" type="info">去完成</van-button>
            </view>
            <view class="btns" wx:else>
                <view style="float:left;margin-right:10rpx;">
                    <icon class="success"></icon>
                </view>
                <view style="float:left;font-size:24rpx;font-weight:400;margin-top:3rpx;">
                    <text>完成</text>
                </view>
            </view>
        </view>
    </view>
</view>
